<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con titulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:gravity="center"
            android:padding="20dp"
            android:text="Promedio Final del Estudiante"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Sección de Exámenes Teóricos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:layout_marginTop="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1976D2"
                android:gravity="center"
                android:padding="12dp"
                android:text="EXÁMENES TEÓRICOS (4 exámenes - se toman los 3 mejores)"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Examen Teórico 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Examen 1:"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtTeorico1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="0-20"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:background="#F8F8F8" />

            </LinearLayout>

            <!-- Examen Teórico 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Examen 2:"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtTeorico2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="0-20"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:background="#F8F8F8" />

            </LinearLayout>

            <!-- Examen Teórico 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Examen 3:"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtTeorico3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="0-20"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:background="#F8F8F8" />

            </LinearLayout>

            <!-- Examen Teórico 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Examen 4:"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtTeorico4"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="0-20"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:background="#F8F8F8" />

            </LinearLayout>

        </LinearLayout>

        <!-- Sección de Evaluaciones de Laboratorio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:layout_marginTop="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#388E3C"
                android:gravity="center"
                android:padding="12dp"
                android:text="EVALUACIONES DE LABORATORIO (8 evaluaciones - todas cuentan)"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Laboratorio 1-4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lab 1:"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/txtLab1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:hint="0-20"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:background="#F8F8F8" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lab 2:"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp" />

                <EditText
                    android:id="@+id/txtLab2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:hint="0-20"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:background="#F8F8F8" />

            </LinearLayout>

            <!-- Laboratorio 3-4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lab 3:"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/txtLab3"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:hint="0-20"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:background="#F8F8F8" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lab 4:"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp" />

                <EditText
                    android:id="@+id/txtLab4"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:hint="0-20"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:background="#F8F8F8" />

            </LinearLayout>

            <!-- Laboratorio 5-6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lab 5:"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/txtLab5"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:hint="0-20"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:background="#F8F8F8" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lab 6:"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp" />

                <EditText
                    android:id="@+id/txtLab6"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:hint="0-20"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:background="#F8F8F8" />

            </LinearLayout>

            <!-- Laboratorio 7-8 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lab 7:"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/txtLab7"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:hint="0-20"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:background="#F8F8F8" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lab 8:"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp" />

                <EditText
                    android:id="@+id/txtLab8"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:hint="0-20"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:background="#F8F8F8" />

            </LinearLayout>

        </LinearLayout>

        <!-- Botones de Acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnCalcularPromedio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:background="#4CAF50"
                android:padding="12dp"
                android:text="CALCULAR"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLimpiar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="#FF9800"
                android:padding="12dp"
                android:text="LIMPIAR"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Botón para volver a Propinas -->
        <Button
            android:id="@+id/btnVolverPropinas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#4CAF50"
            android:padding="12dp"
            android:text="VOLVER A CALCULADORA DE PROPINAS"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Sección de Resultados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#E8F5E8"
            android:layout_marginTop="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2E7D32"
                android:gravity="center"
                android:padding="16dp"
                android:text="RESULTADOS"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Promedio Teórico -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Promedio Teórico:"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblPromedioTeorico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="#2E7D32"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Promedio Laboratorio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Promedio Laboratorio:"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblPromedioLaboratorio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="#2E7D32"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Promedio Final -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PROMEDIO FINAL:"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblPromedioFinal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="#2E7D32"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Estado del Estudiante -->
            <TextView
                android:id="@+id/lblEstadoEstudiante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="#FF5722"
                android:gravity="center"
                android:padding="12dp"
                android:text="ESTADO: DESAPROBADO"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Sección de Examen Sustitutorio -->
            <LinearLayout
                android:id="@+id/layoutSustitutorio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:background="#FFF3E0"
                android:padding="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FF9800"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="EXAMEN SUSTITUTORIO REQUERIDO"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nota Sustitutoria:"
                        android:textColor="#333333"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/txtSustitutorio"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:hint="0-20"
                        android:inputType="numberDecimal"
                        android:maxLength="4"
                        android:background="#F8F8F8" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnRecalcular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#FF9800"
                    android:padding="8dp"
                    android:text="RECALCULAR CON SUSTITUTORIO"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
